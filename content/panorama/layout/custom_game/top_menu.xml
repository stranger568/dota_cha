<root>
	<styles>
		<include src="s2r://panorama/styles/custom_game/top_menu.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_game/util.vjs_c" />
		<include src="s2r://panorama/scripts/custom_game/top_menu.vjs_c" />
		<include src="s2r://panorama/scripts/custom_game/kill_event_filter.vjs_c" />
	</scripts>
	<Panel style="width:100%;height:100%;" hittest="false">
		<Panel id="TopMenuPanel" class="">
			<Panel class="ButtonMenu" onactivate="OpenSettings();">
				<Panel class="TopMenuIcon" id="TopMenuIcon_Settings" />
				<Label class="TopMenuLabel" text="#cha_Settings" />
			</Panel>
			<Panel class="ButtonMenu" onactivate="OpenLeaderboard();">
				<Panel class="TopMenuIcon" id="TopMenuIcon_Leaderboard" />
				<Label class="TopMenuLabel" text="#cha_Leaderboard_b" />
			</Panel>
			<Panel class="ButtonMenu" onactivate="OpenProfileAndDonate('DonateButtonBattlePass', 'DonateWindowBattlePass');">
				<Panel class="TopMenuIcon" id="TopMenuIcon_Pass" />
				<Label class="TopMenuLabel" text="#cha_Pass" />
			</Panel>
			<Panel class="ButtonMenu" onactivate="OpenProfileAndDonate('DonateButtonRewards', 'DonateWindowBattleRewards');">
				<Panel class="TopMenuIcon" id="TopMenuIcon_Rewards" />
				<Label class="TopMenuLabel" text="#cha_Rewards" />
			</Panel>
			<Panel class="ButtonMenu" onactivate="OpenProfileAndDonate('DonateButtonProfile', 'DonateWindowBattleProfile');">
				<Panel class="TopMenuIcon" id="TopMenuIcon_Profile" />
				<Label class="TopMenuLabel" text="#cha_PlayerInfo_profile" />
			</Panel>
		</Panel>
	</Panel>
</root>