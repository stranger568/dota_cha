<root>
	<scripts>
		<include src="s2r://panorama/scripts/custom_game/damage_block.vjs_c" />
	</scripts>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.css" />
		<include src="s2r://panorama/styles/custom_game/damage_block.vcss_c"/>
