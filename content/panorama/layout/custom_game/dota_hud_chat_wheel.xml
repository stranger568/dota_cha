<root>
	<styles>
		<!--                                                         -->
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/custom_game/dota_hud_chat_wheel.vcss_c" />
	</styles>
	<scripts>
		<include src="s2r://panorama/scripts/custom_game/dota_hud_chat_wheel.vjs_c" />
	</scripts>

	<snippets>
		<snippet name="Phrase">
			<Panel>
				<Panel class="Phrase">
					<Label text="{s:phrase}" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<Panel hittest="false" class="MyWheel">
			<Panel id="Wheel">
				<Panel id="Arrow" class="Hidden" />
				<Panel id="PointerContainer">
					<Panel id="WheelPointer" />
				</Panel>
				<Panel id="WheelBG">
					<Panel id="WheelCenter">
						<Panel id="WheelBG2" />
					</Panel>
				</Panel>
			</Panel>
			<Panel id="Bubble">
				<DOTAHeroImage id="HeroImage" heroimagestyle="icon" />
			</Panel>
			<Panel id="ChangeWheelButtons" class="ChangeWheelButtons">
				<Panel class="ChangeWheelButtonLeft" onactivate="LeftButton();"/>
				<Label class="ChangeWheelButtonLabel" id="ChangeWheelButtonLabel" text="0 / 0" />
				<Panel class="ChangeWheelButtonRight" onactivate="RightButton();"/>
			</Panel>
			<Panel hittest="false" id="PhrasesContainer">
			</Panel>
	</Panel>
</root>